Create a new myenv/pyvenv.cfg file with the following contents:

home = {PATH TO PYTHON} (i.e c:\users\vinhp\appdata\local\programs\python\python38)
implementation = CPython
version_info = 3.8.0.final.0
virtualenv = 20.24.5
include-system-site-packages = true
base-prefix = PATH TO PYTHON
base-exec-prefix = PATH TO PYTHON
base-executable = PATH TO PYTHON EXECUTABLE (i.e c:\users\vinhp\appdata\local\programs\python\python38\python.exe)
